<?xml version="1.0" encoding="UTF-8"?>

<templates>

	<!-- Grammar -->

	<template
		name="Options block"
		context="grammar"
		description="Options block"
		id="antlr.options"
		enabled="true"
		autoinsert="true">options {
	${cursor}
}
</template>

	<template
		name="Tokens block"
		context="grammar"
		deleted="false"
		description="Tokens block"
		id="antlr.tokens"
		enabled="true"
		autoinsert="true">tokens {
	${cursor}
}
</template>

	<template
		name="Import statement"
		context="grammar"
		description="Import statement"
		id="antlr.import"
		enabled="true"
		autoinsert="true">import "${file}"${cursor} ; </template>

	<template
		name="Header block: @header"
		context="grammar"
		description="Header block"
		id="antlr.header"
		enabled="true"
		autoinsert="true">@header {
	${cursor}
}
</template>

	<template
		name="Members block: @members"
		context="grammar"
		deleted="false"
		description="Members block"
		id="antlr.members"
		enabled="true"
		autoinsert="true">@members {
	${cursor}
}
</template>

	<template
		name="Action block"
		context="grammar"
		description="Action block"
		id="antlr.action"
		enabled="true"
		autoinsert="true">{ ${cursor} }	</template>

	<template
		name="Predicate"
		context="grammar"
		description="Predicate"
		id="antlr.predicate"
		enabled="true"
		autoinsert="true">{ ${cursor} }? </template>
	
	<!-- Options -->

	<template
		name="Token vocabulary option"
		context="options"
		description="Token vocabulary"
		id="antlr.tokenVocab"
		enabled="true"
		autoinsert="true">tokenVocab = ${vocabName} ; ${cursor}</template>

	<template
		name="Superclass option"
		context="options"
		description="Superclass option"
		id="antlr.superClass"
		enabled="true"
		autoinsert="true">superClass = ${file} ; ${cursor}</template>

	<template
		name="Target language option"
		context="options"
		description="Target language"
		id="antlr.language"
		enabled="true"
		autoinsert="true">language = ${cursor} ; </template>

</templates>
